<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  
  <div class="order-summary jumbotron">
    <h2>Thank you for your order!</h2>
    <table class="table">
    <thead>
      <tr>
      <th scope="col"> Order Email: <%= @order.email %> </th>
      <% order_total = @order.total_cents / 100.00 %>
      <th scope="col"> Order Total: <%= humanized_money_with_symbol order_total %> </th>
      </tr>
    </thead>
    </table>

    <table class="table table-bordered">
      <thead>
      <tr>
        <th colspan="2">Product</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Total</th>
      </tr>
    </thead>
    <% @order.line_items.each do |item| %>
      <%= render 'item', product: item[:product_id], quantity: item[:quantity].to_i %>
    <% end %>

    </div>
    
  </table>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
