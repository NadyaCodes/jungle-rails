<tr>
  <td>
    <% item = Product.find(product) %>
    <%= image_tag item.image.tiny.url %>
  </td>
  <td>
    <h4><%= item.name %></h4>
    <br>
    <p><%= item.description %></p>
    <p><%= quantity %></p>
  </td>
  <td>
    <%= humanized_money_with_symbol item.price %>
  </td>
  <td>
    <%= humanized_money_with_symbol item.price * quantity %>
  </td>
</tr>
<br>
